<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineQuiz"
        tools:targetApi="31">


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2039404506887879~7873848449"/>  <!-- Replace with your actual App ID -->

        <activity
            android:name="com.quizzyonline.app.activities.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.quizzyonline.app.activities.MaterialFromTelegramActivity"
            android:exported="true"
            tools:ignore="MissingClass" />

        <activity
            android:name="com.quizzyonline.app.activities.MainActivity"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.quizzyonline.app.activities.SignupActivity"
            android:exported="true" />

        <activity
            android:name="com.quizzyonline.app.activities.LoginActivity"
            android:exported="true" />

        <activity
            android:name="com.quizzyonline.app.activities.QuizActivity"
            android:exported="false" />

        <activity
            android:name="com.quizzyonline.app.activities.AboutUsActivity"
            android:exported="false" />

        <activity
            android:name="com.quizzyonline.app.activities.FeedbackActivity"
            android:exported="false" />

        <activity
            android:name="com.quizzyonline.app.activities.ReviewActivity"
            android:exported="false" />

        <activity
            android:name="com.quizzyonline.app.activities.HistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity android:name="com.quizzyonline.app.activities.DiscussionSubjectSelectionActivity"/>

        <activity
            android:name="com.quizzyonline.app.activities.DiscussionActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />


        <activity android:name="com.quizzyonline.app.activities.BattleActivity"
            tools:ignore="MissingClass" />


    </application>

</manifest>
